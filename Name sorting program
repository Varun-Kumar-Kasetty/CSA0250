#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define MAX_NAMES 10
#define MAX_LENGTH 20
void sort_names(char names[][MAX_LENGTH], int num_names, int ascending);
int main() {
    char names[MAX_NAMES][MAX_LENGTH];
    int num_names, i, ascending;
    printf("Enter the number of names to be sorted (up to %d): ", MAX_NAMES);
    scanf("%d", &num_names);   
    printf("Enter the names (up to %d characters each):\n", MAX_LENGTH - 1);
    for (i = 0; i < num_names; i++) {
        scanf("%s", names[i]);
    } 
    printf("Sort in ascending order (1) or descending order (0)? ");
    scanf("%d", &ascending);    
    sort_names(names, num_names, ascending);    
    printf("Sorted names:\n");
    for (i = 0; i < num_names; i++) {
        printf("%s\n", names[i]);
    }  
    return 0;
}
void sort_names(char names[][MAX_LENGTH], int num_names, int ascending) {
    int i, j;
    char temp[MAX_LENGTH];    
    for (i = 0; i < num_names - 1; i++) {
        for (j = i + 1; j < num_names; j++) {
            if ((ascending && strcmp(names[i], names[j]) > 0) || (!ascending && strcmp(names[i], names[j]) < 0)) {
                strcpy(temp, names[i]);
                strcpy(names[i], names[j]);
                strcpy(names[j], temp);
            }
        }
    }
}
