#include <stdio.h>
int main() {
    int n, i;
    long long fact = 1;
    printf("Enter a number: ");
    scanf("%d", &n);
    if (n < 0) {
        printf("Error: Factorial of a negative number doesn't exist.");
        return 0;
    }
    for (i = 1; i <= n; i++) {
        fact *= i;
    }
    printf("Factorial of %d is %lld", n, fact);
    return 0;
}


Output:

Enter a number: 5
Factorial of 5 is 120
